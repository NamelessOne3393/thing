<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/farmImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/farm_placeholder"/>

        <TextView
            android:id="@+id/farmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farm Name"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/farmLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"/>

        <TextView
            android:id="@+id/farmDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farm Description"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/produceRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="shop"
            android:text="Button" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>